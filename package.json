{
  "name": "@devcomfort/text-transcoder",
  "version": "0.4.2",
  "type": "module",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "packageManager": "pnpm@9.6.0",
  "scripts": {
    "vitest": "vitest",
    "turbo": "turbo",
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "pnpm build:cjs && pnpm build:esm",
    "clean": "rimraf ./dist",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "files": [
    "./dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "author": {
    "name": "devcomfort",
    "email": "im@devcomfort.dev",
    "url": "https://github.com/devcomfort/text-transcoder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devcomfort/text-transcoder"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "transcode",
    "encode",
    "decode",
    "text-encoding",
    "character-encoding",
    "text-transcoding",
    "text-transformation",
    "text-utility",
    "string-encoding",
    "buffer-encoding",
    "reencode",
    "recoding",
    "nodejs-text",
    "npm-text",
    "javascript-text"
  ],
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@vitest/ui": "^2.0.4",
    "rimraf": "^6.0.1",
    "tslib": "^2.6.3",
    "turbo": "^2.0.9",
    "typescript": "^5.5.4",
    "vitest": "^2.0.4",
    "zod": "^3.23.8"
  },
  "dependencies": {
    "text-decoding": "^1.0.0"
  }
}
