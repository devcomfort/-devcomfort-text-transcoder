{
  "name": "@devcomfort/text-transcoder",
  "version": "0.2.14",
  "type": "module",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build:cjs": "tsc --project tsconfig.cjs.json",
    "build:esm": "tsc --project tsconfig.esm.json",
    "build": "pnpm build:cjs && pnpm build:esm",
    "test": "tsc --project tsconfig.test.json && pnpm ava dist/test/index.test.js"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "default": "./dist/esm/index.js",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./package.json": "./package.json"
  },
  "author": {
    "name": "devcomfort",
    "email": "im@devcomfort.dev",
    "url": "https://github.com/devcomfort/text-transcoder"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devcomfort/text-transcoder"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "text-transcoder",
    "text-encoding",
    "encoding-conversion",
    "text-decoding",
    "character-encoding",
    "reencode",
    "converter",
    "transformation",
    "encode",
    "decode",
    "charset",
    "conversion",
    "text-processing",
    "string",
    "format"
  ],
  "dependencies": {
    "text-decoding": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "ava": "^5.3.1",
    "typescript": "^5.1.6"
  }
}
